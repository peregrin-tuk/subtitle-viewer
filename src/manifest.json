{
    "manifest_version": 2,
    "name": "Subber",
    "version": "1.0",
    "description": "Extract and view subtitle files and learn vocabulary from them",

    "icons": {
        "48": "/static/img/cc-regular-48.png"
    },

    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "<all_urls>",
        "tabs",
        "storage"
    ],

    "background": {
        "scripts": [
            "background.js"
        ]
    },

    "page_action": {
        "browser_style": true,
        "default_icon": {
            "48": "/static/img/cc-regular-grey-48.png"
        },
        "default_title": "View available subtitles",
        "default_popup": "popup.html"
    },

    "web_accessible_resources": [
        "viewer.html"
    ]
}